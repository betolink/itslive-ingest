    "properties": {
        "dt_days": {
            "type": "number",
            "title": "Days of Separation",
            "maximum": 546,
            "minimum": 6,
            "description": "Days of separation between image pairs"
        },
        "percent_valid_pixels": {
            "description": "Percentage of valid glacier pixels",

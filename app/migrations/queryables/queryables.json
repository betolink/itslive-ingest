            "minimum": 0,
            "maximum": 100
        },
        "scene_1_frame": {
            "description": "Path and row identifier for scene 1",
            "type": "string",
            "examples": [
                "046026"
            ]
        },
        "scene_2_frame": {
            "description": "Path and row identifier for scene 2",
            "type": "string",
            "examples": [
                "047026"
            ]
        },
        "created": {
            "description": "Processing date of the granule",
            "type": "string",
            "format": "date-time",
            "examples": [
                "2023-01-01T00:00:00Z"
            ],
            "pattern": "(\\+00:00|Z)$"
        }
    }
